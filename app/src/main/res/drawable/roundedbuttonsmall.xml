<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black border -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="10dp"
            android:color="#000000"
            />
        </shape>
    </item>

    <!-- Circular gradient background -->
    <item android:right="9dp" android:left="9dp" android:top="9dp" android:bottom="9dp">
        <shape android:shape="oval">
            <size
                android:width="24dp"
                android:height="24dp" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/silver"
                android:endColor="@color/dark_green" />
        </shape>
    </item>
</layer-list>
